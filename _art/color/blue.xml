<theme>
	<formatVersion>7</formatVersion>

	<variables>
		<mainColor>004A7F</mainColor>
	</variables>
	
    <view name="system">
    <image name="foreground2" extra="true">
		<color>${mainColor}</color>
    </image>
	
    <text name="systemInfo">
        <color>${mainColor}</color>
    </text>
	
	<text name="shortdescription" extra="true">
        <color>${mainColor}</color>
    </text>
    </view>
	
	<view name="basic, detailed, video">
	<textlist name="gamelist">
        <selectedColor>${mainColor}</selectedColor>
    </textlist>
	
	<image name="backgrounds2" extra="true">
		<color>${mainColor}</color>
    </image>
	
	</view>
	
	<view name="grid">
	<text name="md_name">
	    <color>${mainColor}</color>
    </text>
	</view>
	
    <view name="screen">
    <text name="clock">
        <color>${mainColor}</color>
    </text>
    </view>
	
    <view name="menu">

	<menuText name="menutext, menutitle">
        <separatorColor>${mainColor}</separatorColor>
	</menuText>
	
  </view>
 
</theme>